<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
   <style>
    body {
        background-color: #f0f4f7;
    }
    .container {
        margin-top: 50px;
    }
    h2 {
        margin-bottom: 30px;
        font-size: 36px;
        color: #007bff;
        font-weight: bold;
        text-transform: uppercase;
        text-align: center;
        letter-spacing: 2px;
    }
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }
    .card:hover {
        transform: translateY(-10px);
    }
    .card-title {
        color: #ff6347;
        font-size: 24px;
        font-weight: bold;
        text-transform: capitalize;
    }
    .card-text {
        color: #333;
        font-size: 16px;
        line-height: 1.5;
    }
    .btn-link {
        color: #28a745;
        font-size: 16px;
        text-decoration: none;
        font-weight: bold;
    }
    .btn-link:hover {
        color: #218838;
        text-decoration: underline;
    }
</style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Notes</h2>
        <div class="row">
            <% notes.forEach(note => { %>
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><%= note.subject %></h5>
                            <p class="card-text"><%= note.description %></p>
                            <a href="<%= note.link %>" class="btn btn-link" target="_blank">Open Link</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
